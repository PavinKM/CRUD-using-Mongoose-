<body>
    <h1>Mongo CRUD Example</h1>
    {{message}}
    <br>

    {{!-- insert --}}
    <h1>Create</h1>
    <form method="post" action="/store_book">   {{!-- /store_book - URI --}}
        <label for="title">Title</label>
        <input type="text" name="title">
        <label for="author">author</label>
        <input type="text" name="author">
        <input type="submit">
    </form><br><br>

    {{!-- read --}}
    <ul>
        {{#each employees}}
            <li> {{this.title}} - {{this.author}} </li>
        {{/each}}
    </ul>
